<mvc:View
    controllerName="il.incidentlistfreestyle.controller.ListOfIncidents"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <List
            id="incidentList"
            headerText="{i18n>listTitle}"
            headerLevel="H2"
            items="{
			    path: '/ListOfIncidents'
		    }"
        >
            <StandardListItem
                title="{title}"
                description="{customer/name}"
            />
        </List>
    </Page>
</mvc:View>
